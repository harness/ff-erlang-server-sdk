{erl_opts, [debug_info]}.

{deps, [
    %% git dependencies
    {cfapi, {git, "https://github.com/harness/ff-erlang-client-api", {branch, "main"}}},
    {erlang_murmurhash, {git, "https://github.com/harness-apps/erlang-murmurhash", {branch, "master"}}},
    {lru, "2.4.0"},
    {ctx, "0.6.0"},
    {mochiweb, "3.1.1"},
    {base64url, "1.0.1"}
    ]}.

{profiles, [
    {prod, [
        {erl_opts, [no_debug_info]},
        {relx, [{dev_mode, false}]}
    ]},
    {test, [
        {apps, [ffclient]},
        {deps, [{meck, "0.9.2"}, {hackney, "1.18.1"}]},
        {erl_opts, [debug_info, export_all]},
        {eunit_compile_opts, [export_all]},
        {cover_enabled, true},
        {eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"eunit-reports/"}]}}]}
    ]}
]}.

{dialyzer, [all_deps]}.

{shell, [
    % {config, "config/sys.config"},
    {apps, [ffclient]}
]}.
